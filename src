defmodule TgBot.TG.Answer do
  alias TgBot.TG.Keyboards
  require Logger


  def send(user, answer_template, bindings \\ []) do
    {template, keyboard_template} = answer(answer_template, user.language)
    key = case keyboard_template do
      :no_keyboard -> []
      _ -> [reply_markup: keyboard(keyboard_template, user.language)]
    end
    text = EEx.eval_string(template, assigns: bindings)
    Logger.debug(text)
    Nadia.send_message(user.id, text, key)
  end


  ####################################################
  ####################################################
  ####################################################
  ####################################################


