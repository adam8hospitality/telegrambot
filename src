defmodule TgBot.TG.Answer do
  alias TgBot.TG.Keyboards
  require Logger


  def send(user, answer_template, bindings \\ []) do
    {template, keyboard_template} = answer(answer_template, user.language)
    key = case keyboard_template do
      :no_keyboard -> []
      _ -> [reply_markup: keyboard(keyboard_template, user.language)]
    end
    text = EEx.eval_string(template, assigns: bindings)
    Logger.debug(text)
    Nadia.send_message(user.id, text, key)
  end


  ####################################################
  ####################################################
  ####################################################
  ####################################################


	def answer(:deposit_bitcoin, "ru") do
		{"(Bitcoin) –°–∫–æ–ª—å–∫–æ –≤—ã —Ö–æ—Ç–µ–ª–∏ –±—ã –∏–Ω–≤–µ—Å—Ç–∏—Ä–æ–≤–∞—Ç—å?", :deposit_bitcoin}
	end
	def answer(:deposit_bitcoin, _) do
		{"(Bitcoin) What amount are you considering to invest?", :deposit_bitcoin}
	end
	def answer(:deposit_perfect_money, "ru") do
		{"(Perfect Money) –°–∫–æ–ª—å–∫–æ –≤—ã —Ö–æ—Ç–µ–ª–∏ –±—ã –∏–Ω–≤–µ—Å—Ç–∏—Ä–æ–≤–∞—Ç—å?", :deposit_perfect_money}
	end
	def answer(:deposit_perfect_money, _) do
		{"(Perfect Money) What amount are you considering to invest?", :deposit_perfect_money}
	end


