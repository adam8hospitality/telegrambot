  def text_to_command(text, lang) do
    map = command_map(lang)
    Map.get(map, text)
  end


  def command_map("ru") do
    %{
      "Ğ’ĞºĞ»Ğ°Ğ´Ñ‹ ğŸ’°" => :investments,
      "Ğ”ĞµĞ¿Ğ¾Ğ·Ğ¸Ñ‚ ğŸ“ˆ" => :deposit,
      "Ğ’Ñ‹Ğ²Ğ¾Ğ´ ğŸ’¸" => :withdrawal,
      "Ğ˜Ğ½Ğ²Ğ°Ğ¹Ñ‚ ğŸ‘ª" => :reflink,
      "Ğ ĞµĞ¸Ğ½Ğ²ĞµÑÑ‚ â™»" => :reinvest,
      "Secret ğŸ”®" => :referrals,
      "ĞĞ¿Ñ†Ğ¸Ğ¸ ğŸ”§" => :settings,
      "Ğ˜Ğ³Ñ€Ñ‹ ğŸ®" => :games,
      "FAQ ğŸ“–" => :faq,
      "Ğ§Ğ°Ñ‚ ğŸ’¬" => :contacts,
      "Ğ’Ğ¾Ğ¿Ñ€Ğ¾Ñ â“" => :talk_to_me,
      "/start" => :start,
    }
  end




  def command_map(_) do
    %{
      "Deposits ğŸ’°" => :investments,
      "Invest ğŸ“ˆ" => :deposit,
      "Withdraw ğŸ’¸" => :withdrawal,
      "Invite ğŸ‘ª" => :reflink,
      "Reinvest â™»" => :reinvest,
      "Secret ğŸ”®" => :referrals,
      "Options ğŸ”§" => :settings,
