  def text_to_command(text, lang) do
    map = command_map(lang)
    Map.get(map, text)
  end


  def command_map("ru") do
    %{
      "–í–∫–ª–∞–¥—ã üí∞" => :investments,
      "–î–µ–ø–æ–∑–∏—Ç üìà" => :deposit,
      "–í—ã–≤–æ–¥ üí∏" => :withdrawal,
      "–ò–Ω–≤–∞–π—Ç üë™" => :reflink,
      "–†–µ–∏–Ω–≤–µ—Å—Ç ‚ôª" => :reinvest,
      "Secret üîÆ" => :referrals,
      "–û–ø—Ü–∏–∏ üîß" => :settings,
      "–ò–≥—Ä—ã üéÆ" => :games,
      "FAQ üìñ" => :faq,
      "–ß–∞—Ç üí¨" => :contacts,
      "–í–æ–ø—Ä–æ—Å ‚ùì" => :talk_to_me,
      "/start" => :start,
    }
  end




  def command_map(_) do
    %{
      "Deposits üí∞" => :investments,
      "Invest üìà" => :deposit,
      "Withdraw üí∏" => :withdrawal,
      "Invite üë™" => :reflink,
      "Reinvest ‚ôª" => :reinvest,
      "Secret üîÆ" => :referrals,
      "Options üîß" => :settings,
      "FAQ üìñ" => :faq,
      "Chat üí¨" => :contacts,
      "Games üéÆ" => :games,
      "Question ‚ùì" => :talk_to_me,
      "/start" => :start,
    }
  end






